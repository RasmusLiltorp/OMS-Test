@page "/OMS/SalesReportsOverview"
@using BlazorBootstrap

<PageTitle>Sales Reports Overview</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="topnav">
  <a href="../OMS">OMS</a>
  <a class="active" href="./OMS/SalesReportsOverview">Sales Reports</a>
</div>

<div class="container mt-4">
    <h3>Sales Reports</h3>
    
    <div class="row mt-4">
        <div class="col-md-6 col-lg-4 mb-4">
            <a href="./OMS/SalesStatistics" class="text-decoration-none">
                <div class="card sales-tile bg-primary text-white h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="tile-icon mb-3">
                            <i class="bi bi-clock-history" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="card-title">Sales statistics</h4>
                        <p class="card-text mt-auto">Sort sales by given time intervals</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <a href="./OMS/OrderHistory" class="text-decoration-none">
                <div class="card sales-tile bg-success text-white h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="tile-icon mb-3">
                            <i class="bi bi-receipt" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="card-title">Order History</h4>
                        <p class="card-text mt-auto">Complete order history with search and filters</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <a href="./OMS/ProductPerformance" class="text-decoration-none">
                <div class="card sales-tile bg-info text-white h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="tile-icon mb-3">
                            <i class="bi bi-box-seam" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="card-title">Product Performance</h4>
                        <p class="card-text mt-auto">Individual product sales statistics and history</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <a href="./OMS/CategoryAnalytics" class="text-decoration-none">
                <div class="card sales-tile bg-warning h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="tile-icon mb-3">
                            <i class="bi bi-grid-3x3-gap" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="card-title">Category Analytics</h4>
                        <p class="card-text mt-auto">Sales statistics by product categories</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <a href="./OMS/BrandInsights" class="text-decoration-none">
                <div class="card sales-tile bg-danger text-white h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="tile-icon mb-3">
                            <i class="bi bi-tag" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="card-title">Brand Insights</h4>
                        <p class="card-text mt-auto">Brand performance and comparison metrics</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-6 col-lg-4 mb-4">
            <a href="./OMS/AdvancedSearch" class="text-decoration-none">
                <div class="card sales-tile bg-secondary text-white h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="tile-icon mb-3">
                            <i class="bi bi-search" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="card-title">Advanced Search</h4>
                        <p class="card-text mt-auto">Search products by time interval, category & more</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
